    "commander": "^12.1.0",
    "esbuild": "^0.27.3",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "tree-sitter-cli": "^0.26.5",
    "treelsp": "workspace:*"
