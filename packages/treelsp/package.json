{
  "name": "treelsp",
  "version": "0.0.1",
  "description": "A Langium-style LSP generator using Tree-sitter as the parsing backend",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "lsp",
    "language-server",
    "tree-sitter",
    "parser",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "web-tree-sitter": "^0.24.4"
  },
  "devDependencies": {
    "tsdown": "^0.2.17",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
