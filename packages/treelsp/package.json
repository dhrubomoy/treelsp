{
  "name": "treelsp",
  "version": "0.0.1",
  "description": "A Langium-style LSP generator using Tree-sitter as the parsing backend",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.ts",
      "import": "./dist/codegen/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "lsp",
    "language-server",
    "tree-sitter",
    "parser",
    "typescript"
  ],
  "author": "Dhrubomoy Das Gupta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhrubomoy/treelsp.git",
    "directory": "packages/treelsp"
  },
  "homepage": "https://github.com/dhrubomoy/treelsp#readme",
  "bugs": "https://github.com/dhrubomoy/treelsp/issues",
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "web-tree-sitter": "^0.24.4"
  },
  "devDependencies": {
    "tsdown": "^0.2.17",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
