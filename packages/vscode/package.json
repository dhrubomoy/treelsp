{
  "name": "@treelsp/vscode",
  "displayName": "treelsp",
  "description": "VS Code extension for treelsp-based language servers",
  "version": "0.0.1",
  "publisher": "treelsp",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "treelsp",
      "properties": {
        "treelsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "package": "vsce package",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.2.1",
    "tsdown": "^0.2.17",
    "typescript": "^5.7.3"
  }
}
